{% extends "templates/base.html.twig" %}

{% block mainContent %}
    {% for product in products %}
        <div class="img">
            <a target="_blank" href="product/{{ product.id }}">
            <h1>{{ product.name }}</h1> 
                <img src="web/img/product-{{ product.id }}.jpg" alt="{{ product.name }}" width="110" height="90">
            </a>

            <div class="desc"><p>{{ product.price }}</p></div>
        </div>
    {% endfor %}

{% endblock %}